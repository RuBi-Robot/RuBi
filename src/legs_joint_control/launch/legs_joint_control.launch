<launch>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
   command="xacro --inorder '$(find legs_description)/urdf/legs.xacro'" />

  <group ns="legs">

    <!-- Load HW interface -->
    <node name="locokit_hw_node" pkg="locokit_hw" type="locokit_hw_node" output="screen">
    </node>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find legs_joint_control)/config/legs_joint_control.yaml" command="load"/>

    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
      output="screen" args="left_ankle_effort left_knee_effort left_hip_effort right_ankle_effort right_knee_effort right_hip_effort joint_states"/>

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
      <!--<remap from="/joint_states" to="/legs/joint_states" /> -->
    </node>
  </group>

</launch>